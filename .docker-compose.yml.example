version: '3'

services:
  api:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        - NODE_ENV=development
    environment:
      - PORT=8080
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_USER=DB 유저이름
      - DB_PW=DB 비밀번호
    ports:
      - 8080:8080
    depends_on:
      - postgres
    volumes:
      - .:/usr/src/app
      - /usr/src/app/node_modules
    command: npm run dev

  postgres:
    image: postgres:alpine
    restart: always
    environment:
      - POSTGRES_USER=DB 유저이름
      - POSTGRES_PASSWORD=DB 비밀번호
      - POSTGRES_DB=DB스키마 이름
